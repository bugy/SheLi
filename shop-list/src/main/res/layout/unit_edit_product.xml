<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            app:columnCount="2"
            app:rowCount="3"
            app:useDefaultMargins="false"
            app:alignmentMode="alignBounds">

            <TextView
                style="@style/FieldLabel"
                android:text="@string/edit_product_name_field_label"
                app:layout_gravity="right" />

            <EditText
                android:id="@+id/edit_product_name_field"
                android:imeOptions="actionDone"
                android:inputType="textAutoComplete"
                android:maxLines="1"
                app:layout_columnWeight="1" />

            <TextView
                style="@style/FieldLabel"
                android:text="@string/edit_product_note_label" />


            <net.buggy.components.text.MultilineEditText
                android:id="@+id/unit_edit_product_note_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textAutoComplete|textMultiLine"
                android:maxLength="100"
                android:maxLines="5"
                android:scrollHorizontally="false"
                app:layout_gravity="fill_horizontal"
                tools:text="Some very long line with many text and this note should be in multiple lines." />

            <TextView
                style="@style/FieldLabel"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="12dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:text="@string/edit_product_categories_label"
                app:layout_columnSpan="2" />

        </android.support.v7.widget.GridLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/unit_edit_product_categories_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/unit_edit_product_save_button"
        style="@style/Widget.Design.FloatingActionButton.AtBottom"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_check_white_48dp" />

</android.support.design.widget.CoordinatorLayout>