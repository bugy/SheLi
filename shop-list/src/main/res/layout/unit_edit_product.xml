<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/FieldRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/FieldLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_product_name_field_label" />

            <EditText
                android:id="@+id/edit_product_name_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionDone"
                android:inputType="textAutoComplete"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            style="@style/FieldRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/edit_product_categories_label"
                style="@style/FieldLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_product_categories_label" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/unit_edit_product_categories_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/unit_edit_product_save_button"
        style="@style/Widget.Design.FloatingActionButton.AtBottom"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_check_white_48dp" />

</android.support.design.widget.CoordinatorLayout>