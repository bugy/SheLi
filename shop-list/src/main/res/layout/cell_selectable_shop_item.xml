<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/selectable_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/cell_selectable_shop_item_overdue_indicator"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cell_selectable_shop_item_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                tools:text="Hamburger" />

            <TextView
                android:id="@+id/cell_selectable_shop_item_comment_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/small_font_size"
                tools:text="Buy 10 pieces" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/cell_selectable_shop_item_edit_button"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/shop_item_comment_14dp" />

    </LinearLayout>

    <View
        android:id="@+id/cell_selectable_shop_item_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_separator" />

</LinearLayout>
