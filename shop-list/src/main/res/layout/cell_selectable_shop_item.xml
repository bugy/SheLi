<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/cell_selectable_shop_item_quantity_field"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingEnd="12dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingStart="12dp"
        tools:text="99" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cell_selectable_shop_item_name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Hamburger" />

        <TextView
            android:id="@+id/cell_selectable_shop_item_comment_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_secondary_text"
            android:textSize="@dimen/small_font_size"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="-2dp"
            tools:text="Buy 10 pieces" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/cell_selectable_shop_item_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_gravity="top"
        android:src="@drawable/ic_chevron_double_right_black_24dp"
        android:tint="@color/color_primary_icons" />

</LinearLayout>