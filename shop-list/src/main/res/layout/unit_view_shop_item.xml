<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/unit_view_shop_item_save_button"
        style="@style/Widget.Design.FloatingActionButton.AtBottom"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_check_white_48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            app:alignmentMode="alignBounds"
            app:columnCount="2"
            app:rowCount="4"
            app:useDefaultMargins="false">

            <TextView
                style="@style/FieldLabel"
                android:layout_marginTop="6dp"
                android:text="@string/unit_view_shop_item_name_field_label"
                app:layout_gravity="right" />

            <TextView
                android:id="@+id/unit_view_shop_item_name_field"
                app:layout_columnWeight="1"
                tools:text="Apples" />

            <TextView
                style="@style/FieldLabel"
                android:layout_marginTop="10dp"
                android:text="@string/unit_view_shop_item_quantity_field_label"
                app:layout_gravity="right" />

            <TextView
                android:id="@+id/unit_view_shop_item_quantity_field"
                app:layout_gravity="left"
                tools:text="0.3" />

            <TextView
                style="@style/FieldLabel"
                android:text="@string/unit_view_shop_item_comment_label"
                app:layout_gravity="right" />

            <EditText
                android:id="@+id/unit_view_shop_item_comment_field"
                android:imeOptions="actionDone"
                android:inputType="textAutoComplete"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingBottom="10dp"
                app:layout_gravity="fill_horizontal"
                tools:text="buy a couple" />

            <TextView
                style="@style/FieldLabel"
                android:text="@string/unit_view_shop_item_note_label"
                app:layout_gravity="right" />

            <TextView
                android:id="@+id/unit_view_shop_item_note_field"
                android:layout_width="0dp"
                app:layout_gravity="fill_horizontal"
                tools:text="Some very long line with many text and this note should be in multiple lines." />

        </android.support.v7.widget.GridLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>