<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Pre-lolipop -->
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textSize">@dimen/def_font_size</item>

        <item name="android:textViewStyle">@style/App_TextViewStyle</item>
        <item name="buttonStyle">@style/App_ButtonStyle</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <item name="autoCompleteTextViewStyle">@style/App_EditTextStyle</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="Widget.Design.FloatingActionButton.AtBottom" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:clickable">true</item>

        <item name="elevation">4dp</item>
        <item name="layout_anchorGravity">bottom|end</item>
    </style>

    <style name="FieldLabel" parent="App_TextViewStyle">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FieldRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="App_TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">decorated</item>
    </style>

    <style name="App_TitleTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">decorated</item>
    </style>

    <style name="App_EditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">decorated</item>
    </style>

    <style name="App_ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">decorated</item>
    </style>
</resources>
